# 环境配置示例文件
# 复制此文件为 .env.local 并根据需要修改配置值

# ===== 核心资源配置 =====
# 是否使用绝对URL（true/false）
VITE_USE_ABSOLUTE_URLS=true
# 资源基础URL（当使用绝对URL时）
VITE_ASSETS_BASE_URL=https://cdn.example.com/long-screenshot-splitter
# 部署环境（development/test/production）
VITE_DEPLOY_ENV=production

# ===== 资源服务器配置 =====
# 自定义资源服务器域名
VITE_ASSETS_DOMAIN=cdn.example.com
# 资源路径前缀
VITE_ASSETS_PATH_PREFIX=/long-screenshot-splitter
# 是否使用HTTPS
VITE_ASSETS_HTTPS=true

# ===== CDN配置 =====
# CDN基础URL
VITE_CDN_BASE_URL=https://cdn.example.com

# ===== GitHub Pages配置 =====
# 是否启用GitHub Pages部署
VITE_GITHUB_PAGES=false
# GitHub仓库（格式：username/repository）
VITE_GITHUB_REPOSITORY=username/long-screenshot-splitter
# GitHub用户名
VITE_GITHUB_USER=username

# ===== 部署路径配置 =====
# 应用基础路径
VITE_BASE_PATH=/

# ===== 常用配置示例 =====

# 示例1：使用GitHub Pages
# VITE_USE_ABSOLUTE_URLS=true
# VITE_ASSETS_BASE_URL=https://username.github.io/long-screenshot-splitter
# VITE_GITHUB_PAGES=true
# VITE_GITHUB_REPOSITORY=username/long-screenshot-splitter
# VITE_BASE_PATH=/long-screenshot-splitter/

# 示例2：使用自定义CDN
# VITE_USE_ABSOLUTE_URLS=true
# VITE_ASSETS_BASE_URL=https://your-cdn.com/project
# VITE_CDN_BASE_URL=https://your-cdn.com

# 示例3：使用相对路径（开发环境）
# VITE_USE_ABSOLUTE_URLS=false
# VITE_ASSETS_BASE_URL=
# VITE_DEPLOY_ENV=development