<!-- 全屏预览界面组件 -->
<div id="preview-section" class="fullscreen-preview hidden">
  <!-- 左侧栏：缩略图列表 -->
  <div class="preview-sidebar">
    <div class="preview-sidebar-header">
      <div>
        <h2 class="preview-title">选择需要导出的片段</h2>
        <p class="preview-subtitle">
          <span id="new-selected-count" class="selected-count">已选择 0 个片段</span>
        </p>
      </div>
      <button id="close-preview-btn" class="preview-close-btn" title="返回主界面">
        ✕ 返回
      </button>
    </div>
    
    <!-- 选择控制按钮 -->
    <div class="selection-controls">
      <button id="new-select-all-btn" class="btn select-all">
        全选
      </button>
      <button id="new-deselect-btn" class="btn select-all secondary">
        取消选择
      </button>
    </div>
    
    <div id="thumbnail-list" class="thumbnail-container">
      <!-- 缩略图将动态添加到这里 -->
    </div>
  </div>

  <!-- 右侧栏：大图预览区 -->
  <div class="preview-main">
    <div class="preview-main-header">
      <div>
        <h3 class="preview-main-title">图片预览</h3>
        <p class="preview-current-info">当前显示: <span id="current-preview-info">-</span></p>
      </div>
      <div class="preview-export-buttons">
        <button id="export-zip-btn" class="preview-export-btn zip" disabled>
          📦 导出为 ZIP
        </button>
        <button id="export-pdf-btn" class="preview-export-btn pdf" disabled>
          📄 导出为 PDF
        </button>
      </div>
    </div>
    <div class="preview-image-area">
      <div class="preview-image-wrapper">
        <img 
          id="preview-image" 
          class="preview-main-image" 
          src="" 
          alt="预览图片"
          style="display: none;"
        />
        <div id="preview-placeholder" class="preview-placeholder">
          <div class="preview-placeholder-icon">🖼️</div>
          <p class="preview-placeholder-text">选择左侧缩略图查看大图</p>
        </div>
      </div>
    </div>
  </div>
</div>

