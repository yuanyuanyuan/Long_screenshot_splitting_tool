{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared-components/src/*"],
      "@ui/*": ["packages/ui-library/src/*"],
      "@screenshot-splitter/*": ["packages/screenshot-splitter/src/*"]
    }
  },
  "include": [
    "tools/**/*",
    "*.js",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "packages/*/dist",
    "packages/*/node_modules",
    "old-astro-prj",
    "vite-migration"
  ]
}
