{
  "name": "dual-build-monorepo-system",
  "version": "1.0.0",
  "description": "支持双模式构建的Monorepo系统，包含长截图分割工具等组件",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node tools/build-scripts/dev-server.js",
    "dev:screenshot-splitter": "node tools/build-scripts/dev-server.js --package screenshot-splitter",
    "build": "node tools/build-scripts/build-manager.js build",
    "build:clean": "node tools/build-scripts/build-manager.js clean",
    "build:check": "node tools/build-scripts/build-manager.js check",
    "build:full": "node tools/build-scripts/build-manager.js full",
    "build:spa": "pnpm --filter \"./packages/*\" build:spa",
    "build:single": "pnpm --filter \"./packages/*\" build:single",
    "build:screenshot-splitter": "node tools/build-scripts/build-manager.js build screenshot-splitter",
    "build:screenshot-splitter:spa": "pnpm --filter screenshot-splitter build:spa",
    "build:screenshot-splitter:single": "pnpm --filter screenshot-splitter build:single",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:packages": "pnpm --filter \"./packages/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "type-check": "tsc --noEmit",
    "type-check:packages": "pnpm --filter \"./packages/*\" type-check",
    "test": "pnpm --filter \"./packages/*\" test",
    "test:run": "pnpm --filter \"./packages/*\" test:run",
    "preview": "node tools/build-scripts/deploy-preview.js",
    "preview:single": "node tools/build-scripts/deploy-preview.js screenshot-splitter single",
    "preview:spa": "node tools/build-scripts/deploy-preview.js screenshot-splitter spa",
    "clean": "pnpm --filter \"./packages/*\" clean && rm -rf dist",
    "clean:all": "pnpm clean && rm -rf node_modules packages/*/node_modules",
    "install:all": "pnpm install",
    "postinstall": "echo '✅ 所有依赖安装完成！使用 pnpm dev 启动开发服务器'",
    "test:unit": "jest --selectProjects screenshot-splitter shared-components",
    "test:integration": "jest --selectProjects build-scripts",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "babel-jest": "^29.7.0",
    "commander": "^14.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.0",
    "vite-plugin-externals": "^0.6.2",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}